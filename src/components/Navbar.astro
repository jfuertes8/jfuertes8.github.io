---
import { getCountries } from '../data/photos';

const countries = await getCountries();
const currentPath = Astro.url.pathname;
---

<nav id="main-nav" class="fixed top-0 left-0 right-0 z-50 bg-transparent transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="text-lg font-semibold tracking-tight text-white hover:text-zinc-300 transition-colors">
        Javier Fuertes
      </a>

      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-1">
        <a
          href="/about"
          class:list={[
            'px-4 py-2 rounded-md text-sm font-medium transition-colors',
            currentPath.startsWith('/about')
              ? 'bg-zinc-800 text-white'
              : 'text-white hover:text-white hover:bg-zinc-800/50',
          ]}
        >
          About me
        </a>

        <div class="relative group">
          <a
            href="/portfolio"
            class:list={[
              'px-4 py-2 rounded-md text-sm font-medium transition-colors flex items-center gap-1',
              currentPath.startsWith('/portfolio')
                ? 'bg-zinc-800 text-white'
                : 'text-white hover:text-white hover:bg-zinc-800/50',
            ]}
          >
            Portfolio
            <svg class="w-3.5 h-3.5 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>

          <!-- Country submenu -->
          <div class="absolute top-full left-0 mt-1 w-44 bg-zinc-900 border border-zinc-800 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-150">
            <div class="py-1">
              <a
                href="/portfolio"
                class="block px-4 py-2 text-sm text-zinc-400 hover:text-white hover:bg-zinc-800/50 transition-colors"
              >
                All countries
              </a>
              <div class="border-t border-zinc-800 my-1"></div>
              {countries.map((country) => (
                <a
                  href={`/portfolio?country=${country}`}
                  class="block px-4 py-2 text-sm text-zinc-400 hover:text-white hover:bg-zinc-800/50 capitalize transition-colors"
                >
                  {country}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile hamburger -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-md text-white hover:text-white hover:bg-zinc-800/50 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="hamburger-icon" class="block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-zinc-800 bg-zinc-900/95 backdrop-blur-sm">
    <div class="px-4 py-3 space-y-1">
      <a
        href="/portfolio"
        class:list={[
          'block text-center px-3 py-3 sm:py-2 rounded-md text-base sm:text-sm font-medium transition-colors',
          currentPath.startsWith('/portfolio')
            ? 'bg-zinc-800 text-white'
            : 'text-zinc-400 hover:text-white hover:bg-zinc-800/50',
        ]}
      >
        Portfolio
      </a>

      <a
        href="/about"
        class:list={[
          'block text-center px-3 py-3 sm:py-2 rounded-md text-base sm:text-sm font-medium transition-colors',
          currentPath.startsWith('/about')
            ? 'bg-zinc-800 text-white'
            : 'text-zinc-400 hover:text-white hover:bg-zinc-800/50',
        ]}
      >
        About
      </a>

      <div class="border-t border-zinc-800 my-2 pt-2">
        <div class="flex items-center justify-center gap-4 px-3">
          <a
            href="https://instagram.com/javi_tsuyoi"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-zinc-400 hover:text-white transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
          <a
            href="https://www.linkedin.com/in/fuertesjavier1"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-zinc-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const closeIcon = document.getElementById('close-icon');
  const nav = document.getElementById('main-nav');
  let menuOpen = false;

  const updateNavBackground = () => {
    if (menuOpen || window.scrollY > 0) {
      nav?.classList.remove('bg-transparent');
      nav?.classList.add('bg-zinc-900/95', 'backdrop-blur-sm');
    } else {
      nav?.classList.remove('bg-zinc-900/95', 'backdrop-blur-sm');
      nav?.classList.add('bg-transparent');
    }
  };

  btn?.addEventListener('click', () => {
    menuOpen = !menuOpen;
    menu?.classList.toggle('hidden');
    hamburgerIcon?.classList.toggle('hidden');
    hamburgerIcon?.classList.toggle('block');
    closeIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('block');
    updateNavBackground();
  });

  // Scroll detection for navbar background
  window.addEventListener('scroll', updateNavBackground, { passive: true });
  // Initial check in case page is already scrolled
  updateNavBackground();
</script>
