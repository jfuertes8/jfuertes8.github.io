---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Javier Fuertes | Home">
  <Navbar slot="navbar" />
  <section 
    class="relative flex flex-col items-center justify-center min-h-screen px-4 text-center bg-cover bg-center bg-no-repeat"
    style="background-image: url('/camera.jpg');"
  >
    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black/60"></div>
    
    <!-- Content -->
    <div class="relative z-10 flex flex-col items-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight">The world through my lens.</h1>
      <p class="mt-4 text-base sm:text-lg text-zinc-300 max-w-xs sm:max-w-md">
        A collection of moments captured around the world.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4 w-full sm:w-auto px-4 sm:px-0">
        <a
          href="/portfolio"
          class="px-6 py-3 rounded-lg bg-white text-zinc-900 font-medium text-sm hover:bg-zinc-200 transition-colors text-center"
        >
          Explore Photos
        </a>
        <a
          href="/about"
          class="px-6 py-3 rounded-lg bg-zinc-800 text-zinc-300 font-medium text-sm hover:bg-zinc-700 hover:text-white border border-zinc-700 transition-colors text-center"
        >
          About Me
        </a>
      </div>
    </div>
  </section>
</Layout>
